{{define "home"}}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ .title }}</title>
    <link href="/static/css/styles.css" rel="stylesheet">
</head>

<body class="bg-gray-100 min-h-screen">
    <div class="container mx-auto px-4 py-8">
        <header class="bg-white shadow rounded-lg p-6 mb-8">
            <h1 class="text-3xl font-bold text-gray-800">{{ .title }}</h1>
        </header>
        <main class="bg-white shadow rounded-lg p-6">
            <p class="text-gray-700">{{ .content }}</p>
            <div class="mt-4 p-4 bg-blue-100 rounded-lg">
                <p class="text-blue-700">This is a demo of Go templates with Tailwind CSS hot reloading.</p>
                <p class="mt-2 text-blue-600">Try changing this text or the styles to see hot reloading in action!</p>
            </div>
            <div class="mt-4 p-4 bg-red-100 rounded-lg">
                <p class="text-red-700">This is a demo of Go templates with Tailwind CSS hot reloading.</p>
                <p class="mt-2 text-red-600">Try changing this text or the styles to see hot reloading in action!</p>
            </div>
        </main>
    </div>
</body>

</html>

{{end}}
